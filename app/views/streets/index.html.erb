<div class="container" style="width: 100%; height:100vh; padding:0px;">
  <div class="row">
    <div class="main_map" data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
      <div class="map" style="width: 100%; height: 100vh;"
        data-map-target="map">
      </div>
      <div class="row">
        <div id="instructions" data-map-target="instructions">
          <div class="box_instructions">
            <h5 class="street-name"></h5>
            <br>
            <div class="street-availability"></div>
            <br>
            <div class="park-form" id="park_btn"></div>
          </div>
        </div>
    <div class="footer">
      <%= render "shared/footer" %>
    </div>
  </div>
</div>
